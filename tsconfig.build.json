{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "es5",
      "module": "es6",
      "lib": [
        "es2015",
        "dom"
      ],
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "strictNullChecks": false,
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": false,
      "noImplicitAny": false,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "noUnusedLocals": false,
      "allowJs": true,

      "sourceMap": true,
      "declaration": true,
      "incremental": true,
      "declarationDir": "dist/types",
      "outDir": "dist/lib",
      "baseUrl": ".",
      "paths": {
        "@src/*": [
          "src/*"
        ]
      },
      "typeRoots": [
        "types",
        "node_modules/@types"
      ]
    },
    "include": [
      "src",
    ],
    "exclude": [
      "**/node_modules",
    ]
  }